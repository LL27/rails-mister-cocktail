
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(<%= asset_path 'banner-image.jpg' %>)">

</div>

<div class="container">
  <h1>Cocktails</h1>
<div class="cards">

  <% @cocktails.each do |cocktail| %>
     <%= link_to cocktail_path(cocktail) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= cocktail.name %>
      </div>
      <% end %>
    <% end %>

</div>

</div>
